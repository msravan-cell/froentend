    <div th:each="question : ${questions}">
        <p th:text="${question.questionText}"></p>
        <div th:each="option, iterStat : ${question.options}">
            <input type="radio" th:name="${'question' + question.id}" th:value="${option}"/> <span th:text="${option}"></span><br/>
        </div>
    </div>
    <button type="submit">Submit</button>
